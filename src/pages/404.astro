---
import Layout from '../layouts/MainLayout.astro'
import {Image} from "astro:assets";
import error from '../images/error-404.png'
---
<Layout title="404 - Page Not Found">
    <div class="flex flex-col justify-center items-center gap-7">
        <Image src={error} alt="404" height={250} width={250} class="mt-10" />
        <h1 class="text-5xl font-bold">404 - Page Not Found</h1>
        <p class="text-2xl mb-10">The page you are looking for does not exist.</p>
        <a href="/" class="bg-gray-400 inline-block p-2 mb-6 rounded-lg hover:bg-indigo-500 hover:text-white">Go back to home</a>
    </div>
</Layout>
